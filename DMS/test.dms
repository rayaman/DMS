[SelectSong:function()]
	choice "Pick song:" {
		"Music 1" {
			return music
		}
		"Music 2" {
			return music2
		}
	}

[player:function(song,food)]
	choice "What you wanna do?" {
		"play/resume" {
			song.play()
			player(song)
		}
		"pause" {
			song.pause()
			player(song)
		}
		"stop" {
			song.stop()
			player(song)
		}
		"newSong" {
			song.stop()
			player(song)
		}
		"quit" exit 0
	}

