entry main // Will either start the first block seen or the block supplied by you!
//enable warnings
disable omniscient
enable fullname
enable forwardlabels // Do most of your labels exist ahead?
enable savestate
//enable leaking
//enable debugging
//loadfile "loadtest.dms"
version 0.2
using extendedDefine
[main]
	choice "New Choice Test" {
		"Option 1" print(fact("Hi!"))
		"Option 2" goto "test"
		"Option 3" {
			print("Yes this works!")
			print("Are you happy?")
		}
	}
	goto "end"
	::test::
		print("Here!")
	::end::

[fact:function(n)]
	if(n==1 or n==0)
		return 1
	else 
		return n * fact(n-1)

[this:function()]
	print("This")
	
[that:function()]
	print("That")

